#include <iostream>
using namespace std;

int factorial(int n)
{
    if(n==0 || n==1)
     {
        return 1;
     }
    else
     {
        return n * factorial(n - 1);
     }
}

int main()
{
    int num;
    
    cout<<"Enter positive number: ";
    cin>>num;
    
    if(num<0 )
    {
        cout<<"Error: factorial of a negative number doesn't exist."<<endl;
    }
    else
    {
        cout<<"factorial of "<<num<<" is "<<factorial(num)<<endl;
    }
    
    return 0;
}
