#include <iostream>
using namespace std;

int main()
{
    int n, i;
    
    cout<<"Enter the number of elements: ";
    cin>>n;
    
    int arr[100]; //array declaration (max 100 elements)
    
    int sum = 0;
    
    cout<<"Enter "<<n<<" integers: "<<endl;
    for(i=0; i<n; i++)
    {
        cin >> arr[i];
        sum += arr[i];
    }
    
    float average = sum/n;
    
    cout<<"\nSum = "<<sum<<endl;
    cout<<"Average = "<<average<<endl;

    return 0;
}
