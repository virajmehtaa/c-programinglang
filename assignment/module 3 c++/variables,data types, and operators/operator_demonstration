#include <iostream>
using namespace std;

int main() {
    int a = 20, b = 15;

    cout << "=== Arithmetic Operators ===" << endl;
    cout << "a+b ="<<a+b<<endl;
    cout << "a-b="<<a-b<<endl;
    cout << "a*b="<<a*b<<endl;
    cout << "a/b="<<a/b<<endl;
    cout << "a%b="<<a%b<<endl;

    cout << "\n=== Relational Operators ===" << endl;
    cout << "a==b:"<<(a==b) <<endl;
    cout << "a!=b:"<<(a!=b) <<endl;
    cout << "a>b:"<<(a>b) <<endl;
    cout << "a<b:"<<(a<b) <<endl;
    cout << "a>=b:"<<(a>=b) <<endl;
    cout << "a<=b:"<<(a<=b) <<endl;

    cout << "\n=== Logical Operators ===" << endl;
    int x = 11, y = 25;
    cout << "x&&y:"<<(x>0&&y<0) << endl;
    cout << "x||y:"<<(x>0||y<0) <<endl;
    cout << "!x:"<<(!x) <<endl;

    cout << "\n=== Bitwise Operators ===" << endl;
    cout <<"a&b:"<<(a&b) << endl;
    cout << "a|b:"<<(a|b) << endl;
    cout << "a^b:"<<(a^b) <<endl;
    cout << "~a:"<<(~a) <<endl;
    cout << "a<<1:"<<(a<<1) <<endl;
    cout << "a>>1:"<<(a>>1) <<endl;

    return 0;
}
